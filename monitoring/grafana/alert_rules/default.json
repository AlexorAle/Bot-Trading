{
  "apiVersion": 1,
  "groups": [
    {
      "name": "Trading Alerts",
      "folder": "Trading Bot",
      "interval": "1m",
      "rules": [
        {
          "uid": "drawdown-alert",
          "title": "Drawdown exceeds 1%",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "queryType": "timeSeriesQuery",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "grafana",
              "model": {
                "expr": "portfolio_drawdown",
                "intervalMs": 60000,
                "maxDataPoints": 43200,
                "refId": "A"
              }
            },
            {
              "refId": "C",
              "queryType": "threshold",
              "datasourceUid": "__expr__",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [1],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["A"]
                    },
                    "reducer": {
                      "params": [],
                      "type": "last"
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "__expr__"
                },
                "expression": "A",
                "intervalMs": 60000,
                "maxDataPoints": 43200,
                "refId": "C",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "OK",
          "execErrState": "Error",
          "for": "5m",
          "annotations": {},
          "labels": {
            "severity": "warning"
          }
        }
      ]
    }
  ]
}
